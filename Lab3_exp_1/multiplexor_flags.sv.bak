module multiplexor_flags #(parameter N=4) 
(input logic Z, C, N, V, input [N-1:0] ss, output [N-1:0] flag); 

	logic [N-1:0] aux;	 
	alway @(ss) begin
		case(ss)
			0: aux = Z; // zero
			1: aux = C; // carry
			2: aux = N; // negative
			3: aux = V; // overflow
			default: aux=0;
		endcase
	end
	assign flag = aux;

endmodule